{
  "name": "tech-fvi-edu",
  "version": "1.0.0",
  "description": "Website for tech.fvi.edu",
  "main": "index.html",
  "scripts": {
    "build-js": "browserify src/js/main.js -o src/js/bundle.js",
    "build-min-js": "browserify src/js/main.js | uglifyjs -o dist/js/bundle.min.js",
    "build-sass": "node-sass src/css/main.scss src/css/main.css",
    "prefix-css": "postcss --use autoprefixer src/css/main.css -d src/css",
    "build-min-sass": "node-sass src/css/main.scss | cleancss -o dist/css/main.min.css",
    "watch-js": "watchify src/js/main.js -o src/js/bundle.js -v",
    "watch-sass": "nodemon -e src/css -x \"npm run build-sass\"",
    "build": "npm run build-js & npm run build-sass",
    "watch": "npm run watch-js & npm run watch-sass",
    "dist": "npm run build-min-js & npm run build-min-sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FVITech/tech-fvi-edu.git"
  },
  "author": "Brenton Cozby -- bcozby@fvi.edu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FVITech/tech-fvi-edu/issues"
  },
  "homepage": "https://github.com/FVITech/tech-fvi-edu#readme",
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "dependecies": {
    "envify": "^3.4.1",
    "babelify": "^7.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "clean-css": "^3.4.20",
    "node-sass": "^3.10.1",
    "uglifyjs": "^2.4.10"
  }
}
