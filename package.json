{
  "name": "tech-fvi-edu",
  "version": "1.0.0",
  "description": "Website for tech.fvi.edu",
  "main": "index.html",
  "scripts": {
    "build-js": "browserify js/main.js -o js/bundle.js",
    "watch-js": "watchify js/main.js -o js/bundle.js --poll -v",
    "build-js-min": "browserify js/main.js | uglifyjs -o js/bundle.min.js",
    "sass": "node-sass css/main.scss css/main.css",
    "autoprefixer": "postcss --use autoprefixer css/main.css -d css",
    "build-css": "yarn run sass && yarn run autoprefixer",
    "watch-css": "nodemon -e scss -x \"yarn run build-css\"",
    "cleancss": "cleancss -o css/main.min.css css/main.css ",
    "build-css-min": "yarn run sass && yarn run autoprefixer && yarn run cleancss",
    "build-all": "yarn run build-js & yarn run build-css",
    "build-all-min": "yarn run build-js-min & yarn run build-css-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FVITech/tech-fvi-edu.git"
  },
  "author": "Brenton Cozby -- bcozby@fvi.edu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FVITech/tech-fvi-edu/issues"
  },
  "homepage": "https://github.com/FVITech/tech-fvi-edu#readme",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      "envify"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.5.2",
    "babel-preset-es2015": "^6.18.0",
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "node-sass": "^3.10.1",
    "postcss-cli": "^2.6.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "babelify": "^7.3.0",
    "envify": "^3.4.1",
    "nodemon": "^1.11.0",
    "prevent-popstate-scroll": "^2.0.0"
  }
}
